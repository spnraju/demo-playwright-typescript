{
  "name": "demo-playwright-typescript",
  "version": "1.0.0",
  "description": "Playwright tests using Typescript",
  "main": "index.js",
  "scripts": {
    "postinstall": "playwright install",
    "test": "playwright test --config=config/base.config.ts",
    "test:chrome": "npm run test -- --project=chromium",
    "test:firefox": "npm run test -- --project=firefox",
    "test:webkit": "npm run test -- --project=webkit",
    "update": "npx npm-check-updates --upgrade && npm install && npm audit fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spnraju/demo-playwright-typescript.git"
  },
  "keywords": [],
  "author": "Padmanabha Raju Sagi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spnraju/demo-playwright-typescript/issues"
  },
  "homepage": "https://github.com/spnraju/demo-playwright-typescript#readme",
  "devDependencies": {
    "@playwright/test": "^1.25.0",
    "dotenv": "^16.0.1"
  }
}
